  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.19",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/parser": "^8.46.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.33",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
